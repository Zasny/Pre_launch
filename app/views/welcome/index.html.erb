<% if user_signed_in? %>
	Welcome, <b><%= current_user.full_name %></b>
	<p>Refer user with : <%= link_to refer_user_url(code: current_user.tracking_code), refer_user_url(code: current_user.tracking_code), target: "_blank" %> </p>

	<legend>My Referrers</legend>
	<ul>
		<% if current_user.referrers.blank? %>
			<li>You dont have any referrers yet</li>
		<% else %>
			<% current_user.referrers.each do |referrer| %>
				<li><%= "#{referrer.full_name} -> #{referrer.email}" %></li>
			<% end %>
		<% end %>
	</ul>

<% else %>
	<%= form_for @user, url: subscribes_path, as: :post, html: {class: "form-signin"} do |f| %>

		<legend>Subscribe with us</legend>

		<%= f.text_field :email, class: "form-control", placeholder: "Email" %>
		<%= f.text_field :first_name, class: "form-control", placeholder: "First Name" %>
		<%= f.text_field :last_name, class: "form-control", placeholder: "Last Name" %>

		<br>

		<%= f.submit "Submit", class: "btn btn-lg btn-primary btn-block" %>

	<% end %>
<% end %>